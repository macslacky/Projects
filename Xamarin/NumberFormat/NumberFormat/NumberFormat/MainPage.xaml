<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberFormat.MainPage">

    <StackLayout Orientation="Vertical">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="FORMATTARE UN NUMERO" HorizontalTextAlignment="Center" TextColor="White"
                   FontSize="20"/>
        </Frame>

        <StackLayout Orientation="Vertical" Padding="10,10,10,10">
            <Label Text="Numero" FontSize="Medium"/>
            <Editor x:Name="edtNumero"  />

            <Label Text="Cifre" FontSize="Medium"/>
            <Editor x:Name="edtCifre"  />

            <Button Text="Formatta" Clicked="btnClickFormatta" />

            <Label Text="Risultato" FontSize="Medium"/>
            <Label x:Name="lblRisultato" HorizontalTextAlignment="End" />
        </StackLayout>

    </StackLayout>

</ContentPage>